package _programers;

public class 공원산책 {

	public static void main(String[] args) {
		String[] park = {"SOO","OOO","OOO"};
		String[] routes = {"E 2","S 2","W 1"};
 		
		System.out.println(solution(park, routes));
	}

	private static int[] solution(String[] park, String[] routes) {
		int[] answer = {};
		
		int locationX = 0;
		int locationY = 0;
		for (int i = 0; i < routes.length; i++) {
			for (int j = 0; j < 2; j++) {
				char direction = routes[i].charAt(0);
				int distance = routes[i].charAt(2) - '0';
				
				int x = 0;
				int y = 0;
				switch (direction) {
				case 'E':
					x = locationX + distance;
					if (park[locationY].charAt(x) == 'X') {
						break;
					}else if (x >= park[0].length()) {
						break;
					} else {
						locationX = x;
					}
					break;
				case 'W':
					x = locationX - distance;
					if (park[locationY].charAt(x) == 'X') {
						break;
					}else if (x < 0) {
						break;
					} else {
						locationX = x;
					}
					break;
				case 'S':
					y = locationY + distance;
					if (park[locationY].charAt(x) == 'X') {
						break;
					}else if (y < 0) {
						break;
					} else {
						locationY = y;
					}
					break;
				case 'N':
					y = locationY + distance;
					if (park[locationY].charAt(x) == 'X') {
						break;
					}else if (y < 0) {
						break;
					} else {
						locationY = y;
					}
					break;
				}
				
			}
		}
		
		return null;
	}

}
