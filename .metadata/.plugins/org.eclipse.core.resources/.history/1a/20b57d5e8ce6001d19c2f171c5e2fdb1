package _programers;

public class 덧칠하기 {
	
	public static void main(String[] args) {
		
		int section[] = {2, 3, 4, 5, 6};
		int n = 8;
		int m = 4;
		
		int min = section[0];
		int max = section[0];
		
		for (int i = 0; i < section.length; i++) {
			
			if (min > section[i]) {
				min = section[i];
			}
			if (max < section[i]) {
				max = section[i];
			}
			
		}
		
		int count = 0;
		int cnt = 1;
		
		int area = n/m;
		if (n%m > 0) {
			area++;
		}
		
		for (int i = 0; i < section.length; i++) {
			
			if (!(section[i] < (cnt*m))) {
				cnt++;
				if (!(section[i] < (cnt*m))) {
					count++;
				}				
			}
			
			if (cnt > area) {
				break;
			}
			
		}
		int sectionLength = (max-min)+1 - (count*m);
		
		int answer = 0;
		if (sectionLength > m) {
			answer = sectionLength/m;
			if ((sectionLength%m) > 0) {
				answer++;
			}
		}else {
			answer = 1;
		}
		
		System.out.println(answer);
	}

}
//sectionLength%m에서 나머지가 나온다는 것은 남는 구간이 있다는 소리다
//근데 여기서 sectionLength%m 자체를 더해주는 것이 아닌 sectionLength%m > 0 일 때 1을 더해주는 것이 맞다. 