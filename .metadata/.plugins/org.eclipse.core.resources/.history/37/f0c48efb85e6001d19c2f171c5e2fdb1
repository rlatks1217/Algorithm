package _programers;

public class 덧칠하기 {
	
	public static void main(String[] args) {
		
		int section[] = {1, 3};
		int n = 5;
		int m = 4;
		
		int min = section[0];
		int max = section[0];
		for (int i = 1; i < section.length; i++) {
			if (min > section[i]) {
				min = section[i];
			}
			if (max < section[i]) {
				max = section[i];
			}
		}
		int sectionLength = 0;
		if ((max-min)+1 > m) {
			sectionLength = (max-min)/m + (max-min)%m + 1;			
		}else {
			
		}
		
		System.out.println(sectionLength);
	}

}
