package _programmers;

public class 예상대진표 {

	public static void main(String[] args) {
		int n = 8;
		int a = 4;
		int b = 7;
		System.out.println(1%2);
//		System.out.println(solution(n, a, b));
	}

	private static int solution(int n, int a, int b) {
		int answer = 1;
		while(true) {
			int gap = a - b;
			if (gap < 0 && b%2 == 0) {//b가 더 크단 얘긴
				if (gap == -1) {
					break;
				}
			}else if (a%2 == 0){
				if(gap == 1) {
					break;
				}
			}
			
			if(a%2 != 0) {
				a+=1;
			}
			if(b%2 != 0) {
				b+=1;
			}
			
			a /= 2;
			b /= 2;
			
		}
		
		return answer;
	}

}
