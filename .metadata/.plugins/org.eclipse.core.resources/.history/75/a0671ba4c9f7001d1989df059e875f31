package _programers;

public class 구명보트 {

	public static void main(String[] args) {
		solution();
	}

	private static int solution(int[] people, int limit) {
		int answer = 0;
		
		for (int i = 0; i < people.length; i++) {
			boolean get = false;
			if (people[i] == 0) { //0 즉, 이미 탑승한 인원이면 건너뛰어
				continue;
			}
			
			if (i == people.length-1 && people[i] != 0) { //마지막 탑승자가 0이 아니다? 아직 못 탔다는 얘기니까 보트 추가
				answer++;
				break;
			}
			
			int a = limit - people[i];
			for (int j = i+1; j < people.length; j++) {
				if (people[j] == 0) {
					continue;
				}
				
				if (a >= people[j]) {
					people[i] = 0;
					people[j] = 0;
					answer++;
					get = true;
					break;
				}
			}
			if(!get) {
				answer++;
			}
			
		}
		
		return 0;
	}

}
