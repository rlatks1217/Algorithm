package for_;

import java.util.Scanner;

public class Test {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		
		int cnt = 0;
		for (int i = n+2; i >= 1; i-=2) {
			start = 0;
			for (int j = 0; j < cnt; j++) {
				System.out.print(" ");
			}
			for (int j = 0; j < i; j++) {
				System.out.print("*");
				start++;
			}
			cnt++;
			System.out.println();
		}
		
		for (int i = start; i <= n+2; i+=2) {
			if (i == start) {
				cnt--;
				continue;
			}
			cnt--;
			for (int j = 0; j < cnt; j++) {
				System.out.print(" ");
			}
			for (int j = 0; j < i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		
		sc.close();
	}

}
