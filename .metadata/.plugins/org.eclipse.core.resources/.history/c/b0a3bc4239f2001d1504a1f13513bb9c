package _programers.알고리즘개념;

import java.util.Scanner;

public class 그리디_2 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int N = sc.nextInt();
		int K = sc.nextInt();
		
		int count = 0;
		while (N != 1) {
			if (N%K == 1) {
				N = N -1;
				count++;
				continue;
			}
			
			N = N/K;
			count++;
		}
		
		System.out.println(count);
	}

}
