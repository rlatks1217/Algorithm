package _programers;

public class 덧칠하기 {
	
	public static void main(String[] args) {
		
		int section[] = {1, 3};
		int n = 5;
		int m = 4;
		
		int min = section[0];
		int max = section[0];
		
		for (int i = 0; i < section.length; i++) {
			
			if (min > section[i]) {
				min = section[i];
			}
			if (max < section[i]) {
				max = section[i];
			}
			
		}
		
		int count = section.length/m;
		int cnt = 1;
		
		for (int i = 0; i < section.length; i++) {
			
			if (section[i] < (cnt*m)) {
				continue;
			}else {
				cnt++;
				if (section[i] < cnt*m) {
					
				}
			}
			
			if (cnt > count) {
				System.out.println("멈춤");
				break;
			}
			
		}
		int sectionLength = (max-min)+1;
		
		int answer = 0;
		if (sectionLength > m) {
			answer = sectionLength/m + sectionLength%m;
		}else {
			answer = 1;
		}
		
		System.out.println(sectionLength);
		System.out.println(answer);
	}

}
