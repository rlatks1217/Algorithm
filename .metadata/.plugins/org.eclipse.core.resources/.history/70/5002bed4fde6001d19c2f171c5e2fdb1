package _programers;

public class 덧칠하기 {
	
	public static void main(String[] args) {
		
		int section[] = {2,3,6};
		int n = 8;
		int m = 4;
		
		int startIndex = section[0];
		int idx = 0;
		boolean move = true;
		
		int answer = 1;
		
		while (startIndex <= (n-m)+1 && idx <section.length) { //시작 인덱스가 시작 인덱스의 한계보다 크지 않고
			if (section[idx] <= startIndex+(m-1)) { //범위의 한계 안에 있으면
				idx++;
			} else {
				startIndex++;
			}
		}
		
		System.out.println(answer);
		
		
	}
		

}
