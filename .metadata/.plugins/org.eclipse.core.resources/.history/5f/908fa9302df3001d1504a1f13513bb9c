package _programers;

public class 문자열나누기 {

	public static void main(String[] args) {
		System.out.println(solution("banana"));
	}

	private static int solution(String s) {
		int answer = 0; //여태 분해한 문자열 수
		
		char x = s.charAt(0);
		int equal = 1;
		int differ = 0;
		for (int i = 1; i < s.length(); i++) {
			if(x == s.charAt(i)) {
				equal++;
			} else {
				differ++;
			}
			
			if (equal == differ) {
				s = s.substring(i+1, s.length());
			}
		}
		
		
		return 0;
	}

}
