package _programers;

public class 덧칠하기 {
	
	public static void main(String[] args) {
		
		int section[] = {1, 2, 3, 4};
		int n = 4;
		int m = 1;
		
		int min = section[0];
		int max = section[0];
		for (int i = 1; i < section.length; i++) {
			if (min > section[i]) {
				min = section[i];
			}
			if (max < section[i]) {
				max = section[i];
			}
		}
		int sectionLength = (max-min)+1;
		int answer = 0;
		if (sectionLength > m) {
			answer = sectionLength/m + sectionLength%m;
		}else {
			answer = 1;
		}
		
		System.out.println(sectionLength);
		System.out.println(answer);
	}

}
