package _programers;

public class 구명보트 {

	public static void main(String[] args) {
		solution();
	}

	private static int solution(int[] people, int limit) {
		int answer = 0;
		
		for (int i = 0; i < people.length; i++) {
			if (people[i] == 0) {
				continue;
			}
			
			if (i == people.length-1 && people[i] != 0) {
				answer++;
			}
			
			int a = limit - people[i];
			for (int j = i+1; j < people.length; j++) {
				if (people[j] == 0) {
					continue;
				}
				
				if (a >= people[j]) {
					people[i] = 0;
					people[j] = 0;
					break;
				}
			}
		}
		
		return 0;
	}

}
