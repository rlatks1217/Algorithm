package _programers;

public class 소수만들기 {

	public static void main(String[] args) {
		
		int[] nums = {1,2,3,4};
		
		int max = 0;
		for (int i = 0; i < nums.length; i++) {
			if (max <= nums[i]) {
				max = nums[i];
			}
		}
		
		boolean[] sosoo = new boolean[max+1];
		
		//일단 다 소수로 초기화
		for (int i = 2; i < sosoo.length; i++) {
			sosoo[i] = true;
		}
		
		//소수의 배수들 제거
		for (int i = 2; i*i <= max; i++) {
			if (sosoo[i]) {
				for (int j = i*i; j <= max; j+= i) {
					sosoo[j] = false;
				}
			}
		}
		
		for (boolean b : sosoo) {
			System.out.println(b);
		}
		
	}

}
