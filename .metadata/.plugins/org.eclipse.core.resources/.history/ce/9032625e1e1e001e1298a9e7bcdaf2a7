package 직사각형과삼각형;

import java.util.Scanner;

public class Ex1085 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int x = sc.nextInt();
		int y = sc.nextInt();
		int w = sc.nextInt();
		int h = sc.nextInt();
		
		int xGap = w - x;
		int yGap = h - y;
		
		if (xGap > yGap) {
			System.out.println(xGap);
		} else {
			System.out.println(yGap);			
		}
	}

}
