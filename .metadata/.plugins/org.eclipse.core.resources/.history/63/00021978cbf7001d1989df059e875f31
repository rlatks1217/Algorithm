package _programers;

public class 구명보트 {

	public static void main(String[] args) {
		solution();
	}

	private static int solution(int[] people, int limit) {
		int answer = 0;
		
		for (int i = 0; i < people.length; i++) {
			boolean get = false;
			if (people[i] == 0) { //0 즉, 이미 탑승한 인원이면 건너뛰어
				continue;
			}
			
			if (i == people.length-1 && people[i] != 0) { //마지막 탑승자가 0이 아니다? 아직 못 탔다는 얘기니까 보트 추가
				answer++;
				break;
			}
			
			int a = limit - people[i]; //남은 kg
			int gap = Integer.MAX_VALUE;
			int idx = 0;
			for (int j = i+1; j < people.length; j++) {
				if (people[j] == 0) { //탑승자면 건너뛰어
					continue;
				}
				if (a > people[j]) {
					if(gap > (a - people[j])) {
						gap = people[j];
						idx = j;
						get = true;
					}					
				}
				
			}
			if (idx != 0) {
				people[i] = 0;
				people[idx] = 0;
				answer++;
			}
			
			//동승 인원이 없는 경우
			if(!get) {
				answer++;
			}
			
		}
		
		return 0;
	}

}
