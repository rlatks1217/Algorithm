	private static int[] solution(int n, String[] words) {
		
		int die = 0;
		int turn = 0;
		int cnt = 0;
		HashMap<String, Integer> map = new HashMap<>();
		
		int idx = 0;
		while(true) {
			if(cnt == 0) {
				turn++;
			}
			
			cnt++;
			
			if (cnt == n) {
				cnt = 0;
			}
			
		}
		
		return null;
	}


