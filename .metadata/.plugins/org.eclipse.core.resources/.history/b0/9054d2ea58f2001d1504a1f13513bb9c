package 알고리즘개념;

import java.util.Arrays;

public class 그리디_4 {

	public static void main(String[] args) {
		
		int N = 5;
		String mohomga = "1 2 2 2 3 3 3";
		String[] num = mohomga.split(" ");
		Arrays.sort(num);
		int people = 0;
		int result = 0;
		
		for (int i = 0; i < N; i++) {
			int a = Integer.parseInt(num[i]);
			people++;
			if (people >= a) { //현재 인덱스까지의 인원수가 현재 공포도와 비교했을 때 같거나 크면 한 그룹 형성
				people = 0;
				result++;
			}
		}
		
		System.out.println(result);
		
	}

}
