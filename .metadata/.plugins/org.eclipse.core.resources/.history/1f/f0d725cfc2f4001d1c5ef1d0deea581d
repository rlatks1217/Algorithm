package _programers;

public class 멀리뛰기 {

	public static void main(String[] args) {
		System.out.println(solution(4));
	}

	private static int solution(int n) {
		int answer = 0;
		
		jump(n, 0, answer);
		return answer%1234567;
	}

	private static void jump(int n, int distance, int answer) {
		
		if (n == 0) {
			answer++;
			return;
		}else if (n < 0) {
			return;
		}
		
		n -= distance;
		for (int i = 1; i <= 2; i++) {
			jump(n, i, answer);
		}
		
	}

}
