package _programers;

public class 덧칠하기 {
	
	public static void main(String[] args) {
		
		int section[] = {2,3,6};
		int n = 8;
		int m = 4;
		
		int startIndex = 1;
		int idx = 0;
		boolean move = true;
		
		int answer = 0;
		while (startIndex < n-3) {
			if (section[idx] < startIndex+(m-1)) {
				idx++;
				if (move) {
					answer++;
					move= false;
				}
			}else {
				startIndex++;
				move = true;
			}
		}
		
		if (m > n) {
			answer = 0;
		}
		
		
	}
		

}
